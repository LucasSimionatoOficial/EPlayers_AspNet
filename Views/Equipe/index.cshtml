@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>cadastro de equipes</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data" class="cadastro">
    <div class="campo">
        <label>ID da Equipe</label>
        <input type="text" name="IdEquipe">
    </div>
    <div class="campo">
        <label>Nome da Equipe</label>
        <input type="text" name="NomeEquipe">
    </div>
    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem">
    </div>
    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.NomeEquipe</td>
                <td><img src="~/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.NomeEquipe" width="40px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>