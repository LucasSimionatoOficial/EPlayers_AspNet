@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID da Equipe</label>
    <input type="text" name="IdEquipe">
    <label>Nome da Equipe</label>
    <input type="text" name="NomeEquipe">
    <label>Imagem</label>
    <input type="file" name="Imagem">
    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.NomeEquipe</td>
                <td><img src="~/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.NomeEquipe" width="40px"></td>
                <td><a asp-area="Link para excluir equipe" asp-controller="Equipes" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>